{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
  },
  "include": ["docs/.vuepress/**/*", "../packages/**/*.ts", "../packages/**/*.tsx"],
  "exclude": ["node_modules"]
}