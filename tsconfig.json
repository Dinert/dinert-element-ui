{
    "compilerOptions": {
      "noImplicitAny": false,
      "baseUrl": ".",
      "jsx": "preserve",
      "strict": true,
      "target": "ES2015",
      "module": "ESNext",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "lib": ["esnext", "dom"],
      "paths": {
         "@/*": ["src/*"],
         "@packages/*": ["packages/*"],
         "@vuepress/*": ["vuepress/*"]
      },
    },
    "exclude": ["node_modules"],
    // "include": [
    //     "src/*", "src/**/*.vue", "src/**/*.tsx", "src/**/*.jsx", "src/**/*.ts", "src/**/*.js",
    //     "packages/*", "packages/**/*.vue", "packages/**/*.tsx", "packages/**/*.jsx", "packages/**/*.ts", "packages/**/*.js",
    //     "vuepress/*", "vuepress/**/*.vue", "vuepress/**/*.tsx", "vuepress/**/*.jsx", "vuepress/**/*.ts", "vuepress/**/*.js"
    // ],
    "include": [
        "packages/*", "packages/**/*.vue", "packages/**/*.tsx", "packages/**/*.jsx", "packages/**/*.ts", "packages/**/*.js",
    ],
  }